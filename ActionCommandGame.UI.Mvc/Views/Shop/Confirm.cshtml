@model BuyModel

@{
    ViewData["Title"] = "Confirm Buy";
}

<nav>
    <div class="nav-left">
        <img class="dragonball" src="https://png.pngtree.com/png-vector/20221208/ourmid/pngtree-4-dragon-ball-icon-vector-drgon-illustrtion-png-image_6515607.png" alt="Spinning Dragon Ball">
    </div>
    <div class="nav-center">
        <ul>
            <li class="logo-container logo-guide">
                <img class="logo trans" src="/images/logo.png" alt="logo">
            </li>
        </ul>
    </div>
    <div class="nav-right">
        <form method="post" asp-area="" asp-controller="Account" asp-action="LogOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link">
                <img class="nav-img trans" src="/images/logout.png" alt="Logout">
            </button>
        </form>
    </div>
</nav>

<section>
    
    <div class="center">
        <h1>Are you sure you want to <img class="buy" src="/images/buy.png" alt="buy"/> @ViewBag.name ?</h1>
    </div>

    <div class="center">
        <form asp-action="Buy" asp-controller="Shop" method="post">
            <input type="hidden" name="itemId" value="@Model.ItemId"/>
            <button type="submit"><img class="yes trans" src="/images/yes.png" alt="yes"/></button>
            <a asp-action="Index" asp-controller="Shop"><img class="no trans" src="/images/no.png" alt="no" /></a>
        </form>
    </div>

</section>

@section Styles {
    <link href="@Url.Content("/css/Confirm.css")" rel="stylesheet" type="text/css" />
}