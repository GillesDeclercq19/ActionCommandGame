@model IList<PlayerResult>
@{
    ViewData["Title"] = "Players";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="Create">New Player</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Money</th>
            <th>Experience</th>
            <th>LastActionExecutedDateTime</th>
            <th>CurrentFuelPlayerItemId</th>
            <th>CurrentAttackPlayerItemId</th>
            <th>CurrentDefensePlayerItemId</th>
            <th>Inventory</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <partial name="RowPartial" model="player" />
        }
    </tbody>
</table>

@section Modals
{
    <div class="modal" tabindex="-1" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <span data-value="Name"></span>?</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="Id" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-danger">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script>
        $(function(){
            $('button[data-type="delete"]').on("click", function(){
                let id = $(this).data("id");
                var idInput = $("#deleteModal input[name='Id']");
                $(idInput).val(id);

                var Name = $(this).data("Name");
                $("#deleteModal span[data-value='Name']").html(Name);
            });
        });
    </script>
}
