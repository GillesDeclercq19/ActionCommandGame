@model IList<ItemResult>
@{
    ViewData["Title"] = "Items";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="Create">New Item</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Attack</th>
            <th>Ki</th>
            <th>Defense</th>
            <th>ActionCooldownSeconds</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <partial name="RowPartial" model="item" />
        }
    </tbody>
</table>
